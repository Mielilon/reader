.controls
    .container
        .content.flex.jc-sb
            .controls__navigation.navigation
                img.dark-icon.controls__icon(src="./img/icons/icon-1.svg", alt="")
                img.dark-icon.controls__icon(src="./img/icons/icon-2.svg", alt="")
            .controls__control-panel.control-panel.flex
                .control-panel__pages.flex
                    label.pages__description(for="page") Страница
                    input.pages__input(type="number" id="page")
                    p.pages__all &nbsp;/&nbsp;272
                .control-panel__format.format.flex
                    .format__item.scale.flex
                        img.light-icon.controls__icon(src="./img/icons/minus.svg", alt="")
                        p.scale__interest 100%
                        img.light-icon.controls__icon(src="./img/icons/plus.svg", alt="")
                    .format__item.wider
                        img.light-icon.controls__icon(src="./img/icons/icon-wider.svg", alt="")
                    .format__item.longer
                        img.light-icon.controls__icon(src="./img/icons/icon-wider.svg", alt="")
                    .format__item.rotate
                        img.light-icon.controls__icon(src="./img/icons/rotate-left.svg", alt="")
                        img.light-icon.controls__icon(src="./img/icons/rotate-right.svg", alt="")
            .controls__settings.settings
                img.dark-icon.controls__icon(src="./img/icons/settings-1.svg", alt="")
                img.dark-icon.controls__icon(src="./img/icons/settings-2.svg", alt="")
                img.dark-icon.controls__icon(src="./img/icons/settings-3.svg", alt="")
                img.dark-icon.controls__icon(src="./img/icons/settings-4.svg", alt="")
                img.dark-icon.controls__icon(src="./img/icons/settings-5.svg", alt="")
                img.dark-icon.controls__icon(src="./img/icons/settings-6.svg", alt="")

